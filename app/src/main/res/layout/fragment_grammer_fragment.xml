<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.fragments_navigations.grammer_fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cus6"
        android:layout_gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/cus6"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/grammer_info"
                    android:textStyle="bold|italic"
                    android:fontFamily="monospace"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:background="@color/cus5"
                    android:text="Main English Grammer Parts" />

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/category_1_partofspeech"
                android:textStyle="bold|italic"
                android:fontFamily="monospace"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="#E1C55E"
                android:text="Parts of Speech" />

            <TextView
                android:id="@+id/category_2_sentencestructure"
                android:layout_width="wrap_content"
                android:textStyle="bold|italic"
                android:fontFamily="monospace"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_height="40dp"
                android:text="Sentence Structure"
                android:background="#BCF5A9"/>


            <TextView
                android:id="@+id/category_3_clausesandphrases"
                android:layout_width="wrap_content"
                android:textStyle="bold|italic"
                android:fontFamily="monospace"
                android:gravity="center"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:text="Clauses and Phrases"
                android:background="#A9BCF5"  />

            <TextView
                android:id="@+id/category_4_tenses"
                android:layout_width="wrap_content"
                android:textStyle="bold|italic"
                android:layout_margin="10dp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:layout_height="40dp"
                android:text="Tenses"
                android:background="#F5D0A9"  />

            <TextView
                android:id="@+id/category_5_sentence"
                android:layout_width="wrap_content"
                android:textStyle="bold|italic"
                android:layout_margin="10dp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:layout_height="40dp"
                android:text="Sentence Types"
                android:background="#A9BCF5"  />


            <TextView
                android:id="@+id/category_6_othergrammerparts"
                android:layout_width="wrap_content"
                android:textStyle="bold|italic"
                android:layout_margin="10dp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:layout_height="40dp"
                android:text="Other Grammatical Elements"
                android:background="#A9F5F2"  />


        </LinearLayout>
    </ScrollView>

</FrameLayout>



