<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.fragments_dashboards.StudentDashboardMainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:background="#AEABA0"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:backgroundTint="#AEABA0"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stud_id_main_frag"
                android:fontFamily="monospace"
                android:textStyle="bold|italic"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="#AEABA0"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="#AEABA0"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/masa_logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold|italic"

                    android:layout_marginBottom="15dp"

                    android:fontFamily="monospace"

                    android:textSize="20sp"
                    android:text="MASA Academy\nStudent dashboard"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to the world of English language!"
                    android:textStyle="bold|italic"
                    android:layout_marginBottom="5dp"

                    android:fontFamily="monospace"
                    android:textSize="14sp"
                    android:gravity="center_horizontal"/>




            </LinearLayout>

        </androidx.cardview.widget.CardView>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"

            >

        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_margin="10dp"


            app:cardCornerRadius="20dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#AEABA0"
                android:padding="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/grammer_icon_dashboardstu"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/grammer" />
                <TextView
                    android:layout_width="match_parent"
                    android:textStyle="bold|italic"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="monospace"

                    android:layout_height="wrap_content"
                    android:text="Study English Grammer"
                    android:gravity="center_horizontal"/>
                <ImageView
                    android:id="@+id/vocab_icon_dashboardstu"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/vocabulary" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold|italic"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="monospace"

                    android:text="Learn English Vocabulary"
                    android:gravity="center_horizontal"/>

                <ImageView
                    android:id="@+id/exam_icon_stud_dashboard"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/exam_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textStyle="bold|italic"
                    android:textSize="14sp"
                    android:text="Test your English Knowledge"
                    android:gravity="center_horizontal"/>

                <ImageView
                    android:id="@+id/more_icon_dashboardstu"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/more" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"

                    android:textStyle="bold|italic"
                    android:textSize="14sp"
                    android:text="Learn more English!"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

</FrameLayout>