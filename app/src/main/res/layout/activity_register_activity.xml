<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context=".ui.activities.authorization.Register_activity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/masa_register_icon"
                android:layout_width="75dp"
                android:layout_marginTop="10dp"
                android:layout_height="75dp"
                android:src="@mipmap/masa_round">
            </ImageView>

            <EditText
                android:id="@+id/email_register"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:background="@drawable/rounded_corner_text"
                android:padding="10dp"
                android:inputType="textEmailAddress">
            </EditText>

            <EditText
                android:id="@+id/password_register"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:background="@drawable/rounded_corner_text"
                android:padding="10dp"
                android:inputType="textPassword">
            </EditText>

            <EditText
                android:id="@+id/password_confirm_register"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:background="@drawable/rounded_corner_text"
                android:padding="10dp"
                android:inputType="textPassword">
            </EditText>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/radio_group_register">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:id="@+id/radio_as_stu"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:buttonTint="@color/black"
                    android:text="Register as Student"
                    android:layout_height="wrap_content">

                </RadioButton>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:id="@+id/radio_as_teacher"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"
                    android:text="Register as Teacher"
                    android:layout_height="wrap_content">

                </RadioButton>
            </RadioGroup>
            <Button
                android:id="@+id/register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner_button"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:text="Register"
                android:textColor="@color/white" />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_progress"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/click_back_to_login"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:text="back to Login!" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>