<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Student_dashboard_main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MASA_English_School"
    tools:context=".ui.activities.dashboards.Studentdashboard">

    <FrameLayout
        android:id="@+id/Student_dashboard_main_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/main_fragment_of_student_dashboard"
            android:name="com.example.masa_english_school.ui.fragments.fragments_dashboards.StudentDashboardMainFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="top"
            tools:layout="@layout/fragment_student_dashboard_main">
        </androidx.fragment.app.FragmentContainerView>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/main_bottom_nav_view_stu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:menu="@menu/nav_menu_bottom" />
    </FrameLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/drawer_menu_left_student_page_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>