<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.fragments_drawer.CourseMaterialTeacherFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textStyle="italic|bold"
            android:background="@color/cus6"
            android:text="Course materials for Teachers" />

        <Button
            android:id="@+id/add_material_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner_button"
            android:text="Add Material"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textStyle="italic|bold"
            android:text="Tap and hold for deleting" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_teacher"
            android:layout_width="match_parent"
            android:layout_marginBottom="40dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</FrameLayout>
